<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Maturitetna.MainWindow"
        Title="Maturitetna"
         Background="Green">
    

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!-- User Library on the left -->
        <StackPanel Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" Width="250" Height="600">
            <!-- Add User Library UI elements here -->
            <TextBlock Text="User Library" Margin="10"/>
            <!-- Other elements specific to User Library -->
        </StackPanel>

        <!-- Recently Played in the center -->
        <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Center">
            <!-- Add Recently Played UI elements here -->
            <TextBlock Text="Recently Played" Margin="5"/>
            <!-- Other elements specific to Recently Played -->
        </StackPanel>

        <!-- Search Bar above Recently Played on the right -->
        <StackPanel Grid.Row="0" Grid.Column="1" VerticalAlignment="Top">
            <!-- Add Search Bar UI elements here -->
            <TextBox Text="Search..." Margin="5"/>
            <!-- Other elements specific to Search Bar -->
        </StackPanel>

        <!-- My Uploads above Profile -->
        <StackPanel Grid.Row="2" Grid.Column="2" VerticalAlignment="Center">
            <!-- Add My Uploads UI elements here -->
            <TextBlock Text="My Uploads" Margin="5"/>
            <!-- Other elements specific to My Uploads -->
        </StackPanel>

        <!-- Profile -->
        <StackPanel Grid.Row="0" Grid.Column="2" VerticalAlignment="Top">
            <!-- Add Profile UI elements here -->
            <TextBlock Text="User Profile" Margin="5"/>
            <!-- Other elements specific to User Profile -->
        </StackPanel>

        <!-- Player at the bottom -->
        <StackPanel Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" VerticalAlignment="Bottom">
            <!-- Add Player UI elements here -->
            <TextBlock Text="Player" Margin="5"/>
            <!-- Other elements specific to Player -->
        </StackPanel>
    </Grid>

</Window>
