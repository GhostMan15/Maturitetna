<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Maturitetna.MainWindow"
        Title="Maturitetna"
         Background="CadetBlue">
    

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Grid.Column="0"  Grid.RowSpan="6" BorderThickness="1" BorderBrush="Black" Margin="5" CornerRadius="10"  >
        <!-- User Library on the left -->
        <StackPanel  VerticalAlignment="Top" Width="250">
            <!-- Add User Library UI elements here -->
            <TextBlock Text="User Library" Margin="10"/>
            <!-- Other elements specific to User Library -->
        </StackPanel>
        </Border>
            <!-- Recently Played in the center -->
            <Border Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" BorderThickness="1"  BorderBrush="Black" CornerRadius="10" Margin="3" > 
                <StackPanel  VerticalAlignment="Top" >
                    <!-- Add Recently Played UI elements here -->
                    <TextBlock Text="Recently Played" Margin="5" TextAlignment="Start"/>
                    <ListBox></ListBox>
                    <!-- Other elements specific to Recently Played -->
                </StackPanel>
            </Border>
        
            <Border Grid.Row="3" Grid.Column="1" Grid.RowSpan="2" BorderThickness="1"  BorderBrush="Black" CornerRadius="10" Margin="3">
                <StackPanel VerticalAlignment="Top">
                    <TextBlock Text="Public playlists" Margin="5"/>
                    <ListBox></ListBox>
                </StackPanel>
            </Border>
        <!-- Search Bar above Recently Played on the right -->
        <StackPanel Grid.Row="0" Grid.Column="1"  VerticalAlignment="Top">
            <!-- Add Search Bar UI elements here -->
            <TextBox Text="Search..." Margin="5" CornerRadius="10"/>
            <!-- Other elements specific to Search Bar -->
        </StackPanel>
        <Border Grid.Row="1" Grid.Column="2" Grid.RowSpan="4" BorderThickness="1" BorderBrush="Black" CornerRadius="10" Margin="3">
        <!-- My Uploads above Profile -->
        <StackPanel  VerticalAlignment="Top">
            <!-- Add My Uploads UI elements here -->
            <TextBlock Text="My Uploads" Margin="5" />
            <ListBox>
            </ListBox>
            <!-- Other elements specific to My Uploads -->
        </StackPanel>
        </Border>
        <!-- Profile -->
        <StackPanel Grid.Row="0"  Grid.Column="2" Margin="8">
            <!-- Add Profile UI elements here -->
        <Button Click="Button_OnClick" CornerRadius="10" Content="Sign In" HorizontalAlignment="Right"/>
            
           
            <!-- Other elements specific to User Profile -->
        </StackPanel>
        <Border  Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" BorderThickness="1" BorderBrush="Black" CornerRadius="10" Margin="3">
        <!-- Player at the bottom -->
        <StackPanel  VerticalAlignment="Top">
            <!-- Add Player UI elements here -->
            <TextBlock Text="Player" Margin="5"/>
            <!-- Other elements specific to Player -->
        </StackPanel>
        </Border>
            
    </Grid>

    

</Window>
